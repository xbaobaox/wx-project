.image {
  width: 414px;
  height: 150px;
}
.box{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.cont {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 300rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.cont_image {
  width: 125px;
  height: 125px;
  margin-bottom: 30rpx;
}
.title {
  color: #333;
  font-size: 28rpx;
}
.bottom {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}
.bottom text {
  font-size: 24rpx;
  color: #777;
}
.bottom .total {
  margin-left: 70rpx;
  color: red;
}
