    <mp-cells>
      <mp-cell link hover value="{{item.name}}"  wx:for="{{subject}}" wx:key="{{index}}" bindtap="openConfirm" data-item="{{item}}">
      </mp-cell>
    </mp-cells>
  <!-- </view> -->
  <mp-dialog title='回顾答题' show="{{dialogShow}}" buttons="{{confirm}}" bindbuttontap="tapDialogButton" mask="true">
    <view style="color:black; margin-bottom:10rpx;">{{itemContent}}</view>
    {{details}}
  </mp-dialog>
